<%- include('../partials/head') %>

<div class="container">
  <div class="row p-5">
    <% for (let i = 0; i < products.length; i++) { %>
    <div class="col-md-4">
      <div class="p-4">
        <div class="card">
          <img src="<%= products[i].image %>" class="card-img-top">
          <div class="card-body">
            <h3 class="card-title"><%= products[i].name %></h3>
            <p class="card-text"><%= products[i].category %></p>
            <p class="card-text"><%= products[i].price %></p>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <div class="row">
    <% if (pages) { %>
      <nav class="mx-auto">
        <ul class="pagination">
          <!-- First Page -->
          <% if (current == 1) { %>
            <li class="page-item disabled">
              <a href="#" class="page-link">First Page</a>
            </li>
          <% } else { %>
            <li class="page-item">
              <a href="/products/1" class="page-link">First Page</a>
            </li>
          <% } %>
          <!-- Pages -->
          <% let i = (Number(current) > 2 ? Number(current) - 1 : 1); %>
          <% if (i !== 1) { %>
            <li class="page-item disabled">
              <a href="#" class="page-link">...</a>
            </li>
          <% } %>
          <% for (; i <= (Number(current) + 2) && i <= pages; i++) { %>
            <% if (i == current) { %>
              <li class="page-item active">
                <a href="<%= i %>" class="page-link"><%= i %></a>
              </li>
            <% } else { %>
              <li class="page-item">
                <a href="/products/<%= i %>" class="page-link"><%= i %></a>
              </li>
            <% } %>
            <% if (i == (Number(current) + 2) && i < pages) { %>
              <li class="page-item disabled">
                <a href="#" class="page-link">...</a>
              </li>
            <% } %>
          <% } %>
          <!-- Last Page -->
          <% if (current == pages) { %>
            <li class="page-item disabled">
              <a href="#" class="page-link">Last Page</a>
            </li>
          <% } else { %>
            <li class="page-item">
              <a href="/products/<%= pages %>" class="page-link">Last Page</a>
            </li>
          <% } %>
        </ul>
      </nav>


